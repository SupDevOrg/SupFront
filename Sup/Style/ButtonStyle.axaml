<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style Selector="Button">
    <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="{StaticResource ControlPadding}"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="MinWidth" Value="120"/>
    <Setter Property="MinHeight" Value="48"/>
    <Setter Property="Effect" Value="{StaticResource SoftShadowEffect}"/>
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.18"/>
        <BrushTransition Property="Foreground" Duration="0:0:0.18"/>
        <BrushTransition Property="BorderBrush" Duration="0:0:0.18"/>
        <DoubleTransition Property="Opacity" Duration="0:0:0.18"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
    <Setter Property="Opacity" Value="0.96"/>
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Background" Value="{StaticResource SurfaceOverlayBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
    <Setter Property="Opacity" Value="0.6"/>
    <Setter Property="Effect" Value="{x:Null}"/>
  </Style>

  <Style Selector="Button.secondary">
    <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>

  <Style Selector="Button.secondary:pointerover">
    <Setter Property="Background" Value="{StaticResource SecondaryHoverBrush}"/>
  </Style>

  <Style Selector="Button.secondary:pressed">
    <Setter Property="Background" Value="{StaticResource SecondaryPressedBrush}"/>
  </Style>

  <Style Selector="Button.outlined">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="1.5"/>
    <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    <Setter Property="Effect" Value="{x:Null}"/>
  </Style>

  <Style Selector="Button.outlined:pointerover">
    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
  </Style>

  <Style Selector="Button.outlined:pressed">
    <Setter Property="BorderBrush" Value="{StaticResource PrimaryPressedBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource PrimaryPressedBrush}"/>
  </Style>
</Styles>

